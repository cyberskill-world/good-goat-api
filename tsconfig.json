{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "sourceMap": true,
        "inlineSources": true,
        /* Set `sourceRoot` to  "/" to strip the build path prefix from generated source code references. This will improve issue grouping in Sentry. */
        "sourceRoot": "/",
        "outDir": "./build",
        "rootDir": "./src",
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": false,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "cyberskill/*": ["node_modules/cyberskill/dist/*"],
            "#modules/*": ["src/modules/*"],
            "#shared/*": ["src/shared/*"],
            "#config": ["src/config"]
        },
        "esModuleInterop": true,
        /* Advanced Options */
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "checkJs": false
    },
    "lib": ["esnext"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "swc": true
    }
}
